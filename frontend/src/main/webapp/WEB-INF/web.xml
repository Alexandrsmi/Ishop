<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>Product-image</servlet-name>
        <servlet-class>ru.ishop.frontend.servlet.ProductImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Product-image</servlet-name>
        <url-pattern>/product-image</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add_Product_To_Bucket</servlet-name>
        <servlet-class>ru.ishop.frontend.servlet.AddProductToBucketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add_Product_To_Bucket</servlet-name>
        <url-pattern>/addProductToBucket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Remove_Product_From_Bucket</servlet-name>
        <servlet-class>ru.ishop.frontend.servlet.RemoveProductFromBucketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Remove_Product_From_Bucket</servlet-name>
        <url-pattern>/removeProductFromBucket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Update_product_Count_in_Bucket</servlet-name>
        <servlet-class>ru.ishop.frontend.servlet.UpdateProductCountInBucketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Update_product_Count_in_Bucket</servlet-name>
        <url-pattern>/updateProductCountInBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Release_order</servlet-name>
        <servlet-class>ru.ishop.frontend.servlet.ReleaseOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Release_order</servlet-name>
        <url-pattern>/releaseOrder</url-pattern>
    </servlet-mapping>
</web-app>